<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.freefoodphotos.com/images/content/homeslider1.jpg);">
  <div class="container d-flex flex-column align-items-center">
    <h1><%= @category.name %></h1>
  </div>
</div>

<div class="container mt-5">
  <div class="container d-flex justify-content-between">
     <h1>Categories</h1>
     <%= link_to "Add a recipe", new_category_bookmark_path(@category), class: "btn btn-flat orange"  %>
  </div>


   <div class="cards">
    <% @category.bookmarks.each do |bookmark| %>
      <div class="flex-column shadow bg-body rounded" >
        <div class="card-category container d-flex align-items-start justify-content-end" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= bookmark.recipe.image_url %>)">
          <%= link_to "Delete", bookmark, data: {turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-flat danger mt-3" %>
        </div>

        <div class="pt-3 px-3  mb-1">
        <h5><%= bookmark.recipe.name %></h5>
        <div style="height: 130px; overflow-y:scroll">
          <p><%= bookmark.recipe.description %></p>
        </div>
        <div class="d-flex justify-content-between mt-3">
          <p class="text-muted fst-italic">â <%= bookmark.comment %></p>
          <p>Rating: <%= bookmark.recipe.rating %></p>
        </div>
        </div>

      </div>
    <% end %>
  </div>
</div>